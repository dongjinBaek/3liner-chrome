{
  "name": "3Liner - 마우스만 올려도 확인하는 세줄요약",
  "description": "마우스만 올려도 확인하는 세줄요약",
  "version": "0.1.1",
  "manifest_version": 3,
  "icons": {
    "16": "logo128.png",
    "48": "logo128.png",
    "128": "logo128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://search.naver.com/search.naver*", "https://www.google.com/*", "https://www.google.co.kr/*"],
      "js": ["amplitude.js", "helper-functions.js", "content-script.js"],
      "all_frames": true
    }
  ],
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["https://api.3-liner.com:5000/*"],
  "action": {
    "default_popup": "default-popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": [ "popup.html", "logo.png", "NanumSquareOTF_acB.otf", "NanumSquareOTF_acR.otf"],
      "matches": [ "<all_urls>" ]
    }
  ]
}